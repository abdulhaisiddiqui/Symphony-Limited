@model List<Entrance_Exam>

@{
    ViewData["Title"] = "Register for Exam";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Register for an Entrance Exam</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Exam Name</th>
            <th>Exam Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.examName</td>
                <td>@exam.examDate</td>
                <td>
                    <form asp-action="RegisterForExam" asp-controller="Student" >
                        <input type="hidden" name="examId" value="@exam.examId" />
                        <input type="hidden" name="studentId" value="" /> <!-- Replace with actual student ID -->
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
