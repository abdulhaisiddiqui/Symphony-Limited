@model List<Courses>

        @if (Model != null && Model.Any())
        {
            
        foreach(var cour in Model)
        {

<div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer col-md-6 design">
    <div class="events_item">
            <div class="thumb">
                    <a asp-action="CourseDetail" asp-controller="Student" asp-route-id="@cour.course_id"><img src="@("~/course_images/"+cour.course_image)" asp-append-version="true" alt=""></a>
                <span class="category">@cour.course_name</span>
                <span class="price"><h6><em>$</em>@cour.course_fee</h6></span>
            </div>
            <div class="down-content">
                <span class="author">@cour.course_instructor</span>
                <h4>@cour.course_name</h4>
                </div>
</div>
    </div>
            }
        }
        else
        {
            <p class="text-center text-black">No courses available at the moment.</p>
        }
