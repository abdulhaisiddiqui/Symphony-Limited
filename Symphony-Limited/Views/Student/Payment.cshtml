    <!-- Bootstrap core JavaScript -->
    <script src="~/website/vendor/jquery/jquery.min.js"></script>
    <script src="~/website/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/website/assets/js/isotope.min.js"></script>
    <script src="~/website/assets/js/owl-carousel.js"></script>
    <script src="~/website/assets/js/counter.js"></script>
    <script src="~/website/assets/js/custom.js"></script>

    <!-- Template Javascript -->
    <script src="~/website/js/main.js"></script>
</body>

</html>