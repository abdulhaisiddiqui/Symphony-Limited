    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">


<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="section-title position-relative mb-4 text-center">
                <h6 class="d-inline-block position-relative text-success text-uppercase pb-2">Secure Payments<i class="ri-secure-payment-fill text-success"></i></h6>
                <h1 class="display-4">Payment Details</h1>
                <div class="text-center">
                    

                    <div>
                        <h3>Course: @ViewBag.Course.course_name</h3>
                        <p>Fee: $@ViewBag.Course.course_fee</p>
                    </div>
                </div>
            </div>
<form method="post" asp-action="ProcessPayment" asp-controller="Student">
    <input type="hidden" name="enrollmentId" value="@ViewBag.Enrollment.enrollmentId" />
    <div class="form-group">
        <label for="email">Card Number*</label>
        <div class="input-group">
            <div class="input-group-prepend">
                            <span class="input-group-text"><i class="ri-bank-card-fill"></i></span>
            </div>
            <input type="text" id="cardNumber" name="cardNumber" class="form-control" placeholder="Enter Your Card Number" required />
        </div>
    </div>
    <div class="form-group">
        <label for="password">Expiry Date*</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <input type="text" id="expiryDate" name="expiryDate" class="form-control" placeholder="Expiry Date" required />
        </div>
    </div>
    <div class="form-group">
        <label for="password">Cvv*</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <input type="text" id="cvv" name="cvv" class="form-control" placeholder="cvv" required />
        </div>
    </div>
   
    <button type="submit" class="btn btn-primary btn-block mt-3 py-3" style="transition: 0.3s ease;">Pay Now</button>
</form>

            </div>
        </div>
    </div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>
