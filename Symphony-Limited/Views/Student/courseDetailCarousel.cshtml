@model List<Courses>




    @if (Model != null && Model.Any())
    {
        @foreach (var cour in Model)
        {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="img-fluid" alt="100%x280" src="@("~/course_images/"+cour.course_image)" asp-append-version="true">
                <div class="card-body">
                    <h4 class="card-title"><a asp-action="CourseDetail" asp-controller="Student" asp-route-id="@cour.course_id" class="text-decoration-none" style="color:black;">@cour.course_name</a></h4>

                </div>

            </div>
        </div>

        }
    }
    else
    {
        <p class="text-center text-black">No courses available at the moment.</p>
    }
