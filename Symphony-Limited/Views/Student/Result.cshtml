@model Student_Exams

@{
    ViewData["Title"] = "Test Result";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Symphony | Online Computer Education</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/website/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/website/assets/lib/owlcarousel/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/website/css/style.css" rel="stylesheet">

    @* bootstrap cdn *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQv9ZD3xkX6sI5uH3r50m7lO9Y2HCoPAMgxQ3Wt2kpKNJ4V9+P98FNHZb" crossorigin="anonymous">

    @* owl carousel *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">


</head>
<body>
<h1>Exam Result</h1>

<div class="card">
    <div class="card-header bg-primary text-white" >
        <h2>Student Exam Summary</h2>
    </div>
    <div class="card-body">
        <p><strong>Student ID:</strong> @Model.stu_id</p>
        <p><strong>Exam ID:</strong> @Model.exam_id</p>
        <p><strong>Marks Obtained:</strong> @Model.marksObtained</p>
        <p><strong>Class Assigned:</strong> @Model.examScore</p>
        <p>
            <strong>Result:</strong>
            <span class="badge @(Model.examResult == "Pass" ? "bg-success" : "bg-danger")">
                @Model.examResult
            </span>
        </p>
    </div>
    <div class="card-footer">
        <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
    <script src="~/website/js/main.js"></script>
</body>
</html>
