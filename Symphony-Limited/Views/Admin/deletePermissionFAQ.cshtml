@model FAQs
@{
    ViewData["Title"] = "deletePermissionFAQ";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are Your Sure You Wants To Delete This FAQ?</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item">FAQ id: @Model.faq_id</li>
            <li class="list-group-item">FAQ Question: @Model.question</li>
            <li class="list-group-item">FAQ Answer: @Model.answer</li>
            <li class="list-group-item">Date Posted: @Model.date_posted</li>

        </ul>
        <a asp-action="fetchFAQs" asp-controller="Admin" class="btn btn-warning my-3">Back To List</a>
        <a asp-action="deleteFAQ" asp-controller="Admin" asp-route-id="@Model.faq_id" class="btn btn-danger">Delete</a>
    </div>
    <div class="col-md-2"></div>
</div>