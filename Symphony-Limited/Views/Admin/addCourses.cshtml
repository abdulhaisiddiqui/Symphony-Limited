
@{
    ViewData["Title"] = "addCourses";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
<h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Add Courses</h2>
</div>

<div class="row">   
    <div class="col-md-2"></div>
    <div class="col-md-8">
         <p class="text-center text-danger">@TempData["ErrorMessage"]</p>
        <form method="post" asp-action="addCourses" asp-controller="Admin" enctype="multipart/form-data">
            <input type="file" name="course_image" value="" class="form-control my-3" required/>
            
            <input type="text" name="course_name" value="" class="form-control my-3" placeholder="Enter Course Name" required/>
            <input type="text" name="course_instructor" value="" class="form-control my-3" placeholder="Enter Course Instructor" required/>
            <input type="text" name="course_lectures" value="" class="form-control my-3" placeholder="Enter Course Lectures" required/>
            <input type="text" name="course_description" value="" class="form-control my-3 " placeholder="Enter Course Description" required/>
            <input type="date" name="DateAdded" value="" class="form-control my-3 "  required />
            <input type="number" name="course_duration" value="" class="form-control my-3" placeholder="Enter Course Duration" required/>
            <input type="number" name="course_fee" value="" class="form-control my-3" placeholder="Enter Course Fee $$" required/>

            <input type="submit" value="Add Course" class="btn btn-primary form-control my-3"/>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>